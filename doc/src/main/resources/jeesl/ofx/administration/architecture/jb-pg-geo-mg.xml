	                <t:cell>
	                    <ofx:paragraph>GeoServer</ofx:paragraph>
	                </t:cell>
	                <t:cell>
	                    <ofx:paragraph lang="en">GeoServer is a Web Mapping Server which can process spatial data stored in PostgreSLQ or shapefiles.</ofx:paragraph>
	                </t:cell>
	            </t:row>
	            <t:row>
	                <t:cell>
	                    <ofx:paragraph>MongoDB</ofx:paragraph>
	                </t:cell>
	                <t:cell>
	                    <ofx:paragraph lang="en">MongoDB is a database optimized for storing and retrieving binary data.</ofx:paragraph>
	                </t:cell>
