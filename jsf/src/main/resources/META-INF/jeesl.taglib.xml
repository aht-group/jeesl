<facelet-taglib version="2.0"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd">
	<namespace>http://www.jeesl.org/jsf</namespace>
	<composite-library-name>jeesl</composite-library-name>
	
	<tag>
        <tag-name>grid</tag-name>
        <component>
            <component-type>net.sf.ahtutils.jsf.components.layout.Grid</component-type>
        </component>
    </tag>
	<tag>
        <tag-name>row</tag-name>
        <component>
            <component-type>net.sf.ahtutils.jsf.components.layout.Row</component-type>
        </component>
    </tag>
	<tag>
        <tag-name>slot</tag-name>
        <component>
            <component-type>net.sf.ahtutils.jsf.components.layout.Slot</component-type>
        </component>
    </tag>
   	<tag>
        <tag-name>block</tag-name>
        <component>
            <component-type>net.sf.ahtutils.jsf.components.layout.Block</component-type>
        </component>
    </tag> 
    <tag>
        <tag-name>li</tag-name>
        <component>
            <component-type>org.jeesl.jsf.components.html.Li</component-type>
        </component>
    </tag>
	<tag>
        <tag-name>div</tag-name>
        <component>
            <component-type>org.jeesl.jsf.components.html.Li</component-type>
        </component>
    </tag>
	
	<tag>
        <tag-name>outputXpath</tag-name>
        <component>
            <component-type>org.jeesl.jsf.components.xpath.OutputXpath</component-type>
        </component>
    </tag>
    	<tag>
        <tag-name>trafficLight</tag-name>
        <component>
            <component-type>org.jeesl.jsf.components.TrafficLight</component-type>
        </component>
    </tag>
	<tag>
        <tag-name>trafficLightXpath</tag-name>
        <component>
            <component-type>org.jeesl.jsf.components.xpath.TrafficLightXpath</component-type>
        </component>
    </tag>
    
	<tag>
        <tag-name>highlight</tag-name>
        <component>
            <component-type>org.jeesl.jsf.components.output.Highlight</component-type>
        </component>
    </tag>
    <tag>
        <tag-name>security</tag-name>
        <component>
            <component-type>net.sf.ahtutils.jsf.components.Security</component-type>
        </component>
    </tag>
    
    
    
	<function>
		<function-name>prettyUrl</function-name>
		<function-class>net.sf.ahtutils.jsf.functions.PrettyUrl</function-class>
		<function-signature>java.lang.String prettyUrl(java.lang.String)</function-signature>
	</function>
	<function>
		<function-name>humanFileSize</function-name>
		<function-class>org.jeesl.jsf.functions.HumanFileSize</function-class>
		<function-signature>java.lang.String humanFileSize(java.lang.Long)</function-signature>
	</function>
	
</facelet-taglib> 