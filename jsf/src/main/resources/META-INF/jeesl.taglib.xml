<facelet-taglib version="2.0"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd">
	<namespace>http://www.jeesl.org/jsf</namespace>
	<composite-library-name>jeesl</composite-library-name>
	
	<!-- 
	<tag>
        <tag-name>grid</tag-name>
        <component>
            <component-type>net.sf.ahtutils.jsf.components.layout.Grid</component-type>
        </component>
    </tag>
     -->
	<tag>
        <tag-name>row</tag-name>
        <component>
            <component-type>org.jeesl.jsf.components.layout.Row</component-type>
        </component>
    </tag>
	<tag>
        <tag-name>slot</tag-name>
        <component>
            <component-type>org.jeesl.jsf.components.layout.Slot</component-type>
        </component>
    </tag>
	<tag>
        <tag-name>inputGrid</tag-name>
        <component>
            <component-type>org.jeesl.jsf.components.layout.InputGrid</component-type>
        </component>
    </tag>
   	<tag>
        <tag-name>block</tag-name>
        <component>
            <component-type>net.sf.ahtutils.jsf.components.layout.Block</component-type>
        </component>
    </tag> 
    <tag>
        <tag-name>li</tag-name>
        <component>
            <component-type>org.jeesl.jsf.components.html.Li</component-type>
        </component>
    </tag>
	<tag>
        <tag-name>div</tag-name>
        <component>
            <component-type>org.jeesl.jsf.components.html.Div</component-type>
        </component>
    </tag>
	<tag>
        <tag-name>label</tag-name>
        <component>
            <component-type>org.jeesl.jsf.components.html.Label</component-type>
        </component>
    </tag>
	<tag>
        <tag-name>style</tag-name>
        <component>
            <component-type>org.jeesl.jsf.components.html.Style</component-type>
        </component>
    </tag>
	
	<tag>
        <tag-name>outputXpath</tag-name>
        <component>
            <component-type>org.jeesl.jsf.components.xpath.OutputXpath</component-type>
        </component>
    </tag>
    	<tag>
        <tag-name>trafficLight</tag-name>
        <component>
            <component-type>org.jeesl.jsf.components.TrafficLight</component-type>
        </component>
    </tag>
	<tag>
        <tag-name>trafficLightXpath</tag-name>
        <component>
            <component-type>org.jeesl.jsf.components.xpath.TrafficLightXpath</component-type>
        </component>
    </tag>
    

	<tag>
        <tag-name>security</tag-name>
        <component>
            <component-type>org.jeesl.jsf.components.Security</component-type>
        </component>
    </tag>
	<tag>
        <tag-name>qrCode</tag-name>
        <component>
            <component-type>org.jeesl.jsf.components.QrCode</component-type>
        </component>
    </tag>
    
    
	<function>
		<function-name>prettyUrl</function-name>
		<function-class>org.jeesl.jsf.function.PrettyUrl</function-class>
		<function-signature>java.lang.String prettyUrl(java.lang.String)</function-signature>
	</function>
	<function>
		<function-name>humanFileSize</function-name>
		<function-class>org.jeesl.jsf.function.HumanFileSize</function-class>
		<function-signature>java.lang.String humanFileSize(java.lang.Long)</function-signature>
	</function>
	<function>
		<function-name>posToChar</function-name>
		<function-class>org.jeesl.jsf.function.Position2Character</function-class>
		<function-signature>java.lang.String toChar(java.lang.Integer)</function-signature>
	</function>
	<function>
		<function-name>escapeJavaScript</function-name>
		<function-class>org.jeesl.jsf.function.StringEscape</function-class>
		<function-signature>java.lang.String escapeJavaScript(java.lang.String)</function-signature>
	</function>
	<function>
		<function-name>escapeJava</function-name>
		<function-class>org.jeesl.jsf.function.StringEscape</function-class>
		<function-signature>java.lang.String escapeJava(java.lang.String)</function-signature>
	</function>
	<function>
		<function-name>escapeHtml</function-name>
		<function-class>org.jeesl.jsf.function.StringEscape</function-class>
		<function-signature>java.lang.String escapeHtml(java.lang.String)</function-signature>
	</function>
		<function>
		<function-name>add</function-name>
		<function-class>org.jeesl.jsf.function.SimpleArithmetic</function-class>
		<function-signature>java.util.Integer add(java.lang.Integer,java.lang.Integer)</function-signature>
	</function>
	
	<function>
		<function-name>dateDifference</function-name>
		<function-class>org.jeesl.jsf.function.DateTimeFunction</function-class>
		<function-signature>java.lang.Integer dateDifference(java.util.Date,java.util.Date)</function-signature>
	</function>
	<function>
		<function-name>dateDayDeviation</function-name>
		<function-class>org.jeesl.jsf.function.DateTimeFunction</function-class>
		<function-signature>java.lang.Integer dayDeviation(java.util.Date,java.util.Date,java.lang.Integer)</function-signature>
	</function>
	<function>
		<function-name>datePlusDays</function-name>
		<function-class>org.jeesl.jsf.function.DateTimeFunction</function-class>
		<function-signature>java.util.Date plusDay(java.util.Date,java.lang.Integer)</function-signature>
	</function>
	<function>
		<function-name>timeSeconds2Minutes</function-name>
		<function-class>org.jeesl.jsf.function.DateTimeFunction</function-class>
		<function-signature>java.util.String seconds2Minutes(java.lang.Integer)</function-signature>
	</function>
	
	<function>
		<function-name>version</function-name>
		<function-class>org.jeesl.jsf.function.ImplementationVersion</function-class>
		<function-signature>java.lang.String version(java.lang.String)</function-signature>
	</function>
</facelet-taglib> 