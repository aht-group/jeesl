<facelet-taglib version="2.0"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd">
	<namespace>http://ahtutils.sourceforge.net/jsf</namespace>
	<composite-library-name>ahtutils</composite-library-name>
	
	<tag>
        <tag-name>row</tag-name>
        <component>
            <component-type>org.jeesl.jsf.components.layout.Row</component-type>
        </component>
    </tag>
	<tag>
        <tag-name>slot</tag-name>
        <component>
            <component-type>org.jeesl.jsf.components.layout.Slot</component-type>
        </component>
    </tag>
    <tag>
        <tag-name>logThis</tag-name>
        <component>
            <component-type>net.sf.ahtutils.jsf.components.LogThis</component-type>
        </component>
    </tag>

    <tag>
        <tag-name>grid</tag-name>
        <component>
            <component-type>net.sf.ahtutils.jsf.components.layout.Grid</component-type>
        </component>
    </tag>

	<tag>
        <tag-name>security</tag-name>
        <component>
            <component-type>net.sf.ahtutils.jsf.components.Security</component-type>
        </component>
    </tag>
        
	<tag>
        <tag-name>outputXpath</tag-name>
        <component>
            <component-type>org.jeesl.jsf.components.OutputXpath</component-type>
        </component>
    </tag>
	

	<function>
		<function-name>mobileDevice</function-name>
		<function-class>net.sf.ahtutils.jsf.functions.MobileDevice</function-class>
		<function-signature>java.lang.Boolean mobileDevice()</function-signature>
	</function>
	
</facelet-taglib> 