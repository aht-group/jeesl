{
	"compileOnSave": false,
    "compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"baseUrl": "./",
		"types": ["jquery","jqueryui","node"],
		"strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
		"sourceMap": true,
		"declaration": false,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "ES5",
		"module": "CommonJS",
		//"moduleResolution": "bundler",
		"outDir": "./dist/",
		"lib": [
			"ES5",
			"dom",
			"ES2021.String"
		  ],
		  "paths": {
//			"jquery":["node_modules/@types/jquery/index"],
//			"jquery-ui":["node_modules/jqueryui/*"],
//			"primefaces":["node_modules/primefaces/*"],
		  }
    },
	"include": ["src/**/*.ts","src/**/*.js", "src/**/*.test.ts", "src/*.ts"],
	"exclude": ["node_modules"]
}
